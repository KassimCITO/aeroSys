# Configuración del Sistema de Gestión de Aeropuertos
# Copia este archivo como .env y modifica los valores según tu entorno

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Entorno de ejecución (development, production)
FLASK_ENV=development

# Modo debug (True/False)
FLASK_DEBUG=True

# Clave secreta para sesiones (genera una nueva para producción)
# Puedes generar una con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui_cambiar_en_produccion

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Base de datos SQLite (desarrollo)
DATABASE_URL=sqlite:///aeropuertos.db

# Para producción con MySQL:
# DATABASE_URL=mysql://usuario:contraseña@localhost:3306/aeropuertos

# Para producción con PostgreSQL:
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/aeropuertos

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Host del servidor (0.0.0.0 para acceso externo)
HOST=0.0.0.0

# Puerto del servidor
PORT=5000

# ===========================================
# CONFIGURACIÓN DEL AEROPUERTO
# ===========================================

# Información básica del aeropuerto
AIRPORT_NAME=Mi Aeropuerto
AIRPORT_CITY=Ciudad
AIRPORT_MUNICIPALITY=Municipio
AIRPORT_STATE=Estado
AIRPORT_COUNTRY=México

# Códigos del aeropuerto
AIRPORT_IATA=XXX
AIRPORT_ICAO=XXXX

# Información de contacto
AIRPORT_DIRECTOR=Director del Aeropuerto
AIRPORT_ADDRESS=Dirección del Aeropuerto
AIRPORT_POSTAL_CODE=12345
AIRPORT_PHONE=+52 (55) 1234-5678
AIRPORT_EMAIL=info@aeropuerto.com
AIRPORT_WEBSITE=https://www.aeropuerto.com

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Tiempo de sesión en segundos (3600 = 1 hora)
SESSION_TIMEOUT=3600

# Máximo de intentos de login
MAX_LOGIN_ATTEMPTS=5

# Tiempo de bloqueo en segundos (1800 = 30 minutos)
LOGIN_LOCKOUT_TIME=1800

# ===========================================
# CONFIGURACIÓN DE REPORTES
# ===========================================

# Directorio para archivos temporales de reportes
REPORTS_TEMP_DIR=static/temp

# Tamaño máximo de archivo de reporte en MB
MAX_REPORT_SIZE=50

# Formato por defecto de reportes (pdf, excel)
DEFAULT_REPORT_FORMAT=pdf

# ===========================================
# CONFIGURACIÓN DE EMAIL (FUTURO)
# ===========================================

# Servidor SMTP para notificaciones
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion

# Email del administrador
ADMIN_EMAIL=admin@aeropuerto.com

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/aeropuerto.log

# Rotación de logs (diaria)
LOG_ROTATION=daily

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================

# Habilitar backup automático
BACKUP_ENABLED=True

# Frecuencia de backup (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Directorio de backups
BACKUP_DIR=backups

# Retener backups por X días
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================

# Habilitar métricas de rendimiento
METRICS_ENABLED=True

# Puerto para métricas (si está habilitado)
METRICS_PORT=9090

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================

# Habilitar cache (Redis recomendado para producción)
CACHE_ENABLED=False

# URL de Redis (si está habilitado)
REDIS_URL=redis://localhost:6379/0

# Tiempo de expiración del cache en segundos
CACHE_TIMEOUT=300

# ===========================================
# CONFIGURACIÓN DE UPLOADS
# ===========================================

# Directorio para archivos subidos
UPLOAD_FOLDER=static/uploads

# Tamaño máximo de archivo en MB
MAX_CONTENT_LENGTH=16

# Extensiones permitidas
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Habilitar modo de desarrollo
DEVELOPMENT_MODE=True

# Mostrar queries SQL en consola
SQL_DEBUG=False

# Habilitar profiling
PROFILING_ENABLED=False

# ===========================================
# INSTRUCCIONES DE USO
# ===========================================

# 1. Copia este archivo como .env
# 2. Modifica los valores según tu entorno
# 3. Para producción, cambia FLASK_ENV=production
# 4. Genera una nueva SECRET_KEY segura
# 5. Configura la base de datos apropiada
# 6. Ajusta la configuración del aeropuerto
# 7. Reinicia la aplicación para aplicar cambios

# ===========================================
# NOTAS IMPORTANTES
# ===========================================

# - Nunca subas el archivo .env al control de versiones
# - Mantén la SECRET_KEY segura y única
# - Para producción, usa una base de datos robusta (MySQL/PostgreSQL)
# - Configura HTTPS en producción
# - Realiza backups regulares de la base de datos
# - Monitorea los logs regularmente
